        <Grid Name="Play2ColumnBlackKeys" Grid.Row="0" ZIndex="1"></Grid>
        <Grid Name="Play2WhiteKeysGrid" Grid.Row="1" ZIndex="0"></Grid>
        <Grid Name="Play2BlackKeysGrid" Grid.Row="1" ZIndex="1" Focusable="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="70*"></RowDefinition>
                <RowDefinition Height="30*"></RowDefinition>
            </Grid.RowDefinitions>
        </Grid>

        <!-- Currently not fully used while we figure out how and what exactly (pause menu on esc?) -->
