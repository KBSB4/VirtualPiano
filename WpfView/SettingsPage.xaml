<Page x:Class="WpfView.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <Grid Background="#FF292929">

        <Rectangle HorizontalAlignment="Left" Height="250" Margin="71,0,0,0" Fill="#FF3D3D3D" VerticalAlignment="Center" Width="287"/>

        <DockPanel Grid.ColumnSpan="3" Background="#FF292929" VerticalAlignment="Top" Height="30">
            <Menu DockPanel.Dock="Top"  VerticalAlignment="Top"   Background="#FF292929">
                <MenuItem Header="Back to Main Menu" Height="30" Click="MainMenu_Click" Foreground="White"  >
                    <MenuItem.Icon>
                        <Image Source="Images/previous.png" Margin="3,-4,0,0" />
                    </MenuItem.Icon>
                </MenuItem>
            </Menu>
        </DockPanel>
        <Rectangle Fill="#FF292929" Margin="146,107,514,300" StrokeThickness="5">
            <Rectangle.Effect>
                <DropShadowEffect/>
            </Rectangle.Effect>
        </Rectangle>
        <Label Content="Settings" HorizontalAlignment="Left" Height="43" Margin="172,107,0,0" VerticalAlignment="Top" Width="88" Foreground="White" FontSize="20"/>
        <Rectangle Stroke="Black" Margin="172,172,454,254"/>
        <Rectangle Stroke="Black" Margin="172,230,454,196"/>
        <Rectangle Stroke="Black" Margin="172,201,454,225"/>
        <Label Content="Volume:" HorizontalAlignment="Left" Height="24" Margin="71,172,0,0" VerticalAlignment="Top" Width="96" Foreground="White" FontSize="20"/>
    </Grid>
</Page>
